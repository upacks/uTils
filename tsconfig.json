{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "sourceMap": false,
      "outDir": "lib",
      "baseUrl": "./src"
   },
   /* "ts-node": {
      "files": true,
      "esm": true,
      "experimentalSpecifierResolution": "node"
   }, */
   "include": [
      "**/*.ts",
      "**/*.tsx"
   ],
   "exclude": [
      "node_modules"
   ]
}